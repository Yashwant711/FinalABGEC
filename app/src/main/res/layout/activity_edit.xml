<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!-- Header Bar with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:paddingEnd="8dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- ScrollView for Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="24dp">

            <!-- Profile Picture Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/upload_picture"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_acc_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/add_profile_photo"
                    android:fontFamily="@font/poppins"
                    android:textColor="#B1BCD2"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/browse_your_gallery_or_take_a_picture_from_the_phone_camera_to_upload"
                    android:textColor="#B1BCD2"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:failureImage="@drawable/ic_load_img"
                    app:roundedCornerRadius="15dp"
                    fresco:placeholderImage="@drawable/ic_image_holder" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/remove_profile_pic_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text="Remove Profile Picture"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center"/>



            <!-- Personal Info Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Info"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:enabled="false"
                android:padding="16dp"
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="textPersonName"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                                <TextView
                                    android:id="@+id/male"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_male"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:padding="15dp"
                                    android:text="@string/male"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    app:drawableStartCompat="@drawable/ic_male"/>

                                <TextView
                                    android:id="@+id/female"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:background="@drawable/bg_male"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:padding="15dp"
                                    android:text="@string/female"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    app:drawableStartCompat="@drawable/ic_female"/>
            </LinearLayout>


            <EditText
                android:enabled="false"
                android:padding="16dp"
                android:id="@+id/editBatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Batch"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:enabled="false"
                android:padding="16dp"
                android:id="@+id/editBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Branch"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth"
                android:inputType="none"
                android:focusable="false"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="text"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:inputType="text"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:inputType="text"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <!-- About Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Bio Field -->
            <EditText
                android:padding="16dp"
                android:id="@+id/editBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bio"
                android:inputType="textMultiLine"
                android:minHeight="100dp"
                android:gravity="top|start"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <!-- Designation Field -->
            <EditText
                android:padding="16dp"
                android:id="@+id/editDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Designation"
                android:inputType="textPersonName"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <!-- Organization Field -->
            <EditText
                android:padding="16dp"
                android:id="@+id/editOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization"
                android:inputType="text"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <!-- Contact Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Info"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:enabled="false"
                android:padding="16dp"
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="16dp" />

            <!-- Contact Visibility Checkbox -->
            <CheckBox
                android:id="@+id/checkboxContactVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make your contact information visible?"
                android:layout_marginBottom="24dp" />

            <!-- Social Links -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Links"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Facebook URL"
                android:inputType="textUri"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="8dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editInstagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Instagram URL"
                android:inputType="textUri"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="8dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editLinkedin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="LinkedIn URL"
                android:inputType="textUri"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="8dp" />

            <EditText
                android:padding="16dp"
                android:id="@+id/editTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Twitter URL"
                android:inputType="textUri"
                android:background="@drawable/bg_edt_text"
                android:layout_marginBottom="24dp" />

            <!-- Save Button -->
            <Button
                android:padding="16dp"
                android:id="@+id/btnSave"
                android:background="@drawable/bg_card"
                android:backgroundTint="@color/main_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
